{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2021",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "lib"]
}
